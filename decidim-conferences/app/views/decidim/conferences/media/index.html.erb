<% add_decidim_meta_tags(title: t("media.index.title", scope: "decidim")) %>

<%
edit_link(
  decidim_admin_conferences.conference_media_links_path(current_participatory_space.slug),
  :update,
  :conference,
  conference: current_participatory_space
)
%>

<div class="row">
  <div class="columns mediumlarge-12 conference-media">
    <% if @media_links.any? %>
      <section>
        <h1 class="section-heading"><%= t("media.index.title", scope: "decidim") %></h1>
        <p><%= t("media.index.description", scope: "decidim") %></p>
      </section>
      <hr class="reset mt-none mb-s" />
      <section class="media-links">
        <ul class="list-reset">
          <% @media_links.each do |media_link| %>
            <li>
              <%= icon "external-link" %>
              <div>
                <%= link_to media_link.link, target: "_blank" do %>
                  <strong><%= translated_attribute(media_link.title) %> </strong>
                <% end %>
                <div class="text-small"><%= l(media_link.date, format: :decidim_short_with_month_name_short) %> Â· <%= media_link.link %></small>
              </div>
            </li>
          <% end %>
        </ul>
      </section>
      <hr class="reset mt-none mb-s" />
    <% end %>
    <section class="media-pictures">
      <%= attachments_for_conference current_participatory_space %>
    </section>
  </div>
</div>
